<form action="/bottles/<%= @bottle.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Name</label>
  <input type="text" name="bottle[name]" value="<%= @bottle.name %>"/>

  <label for="name">Brand</label>
  <input type="text" name="bottle[brand]" value="<%= @bottle.brand %>"/>

  <label for="variety">Variety</label>
  <input type="text" name="bottle[variety]" value="<%= @bottle.variety %>"/>

  <label for="description">Description</label>
  <input type="textarea" name="bottle[description]" value="<%= @bottle.description %>"/>

  <label for="note">Note</label>
