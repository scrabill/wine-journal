  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Wine Journal</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css?family=Noto+Serif+JP:400,700&display=swap" rel="stylesheet">

    <!--Font Awesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <div class="wrapper">

        <nav>
          <a href="/"><i class="fas fa-wine-bottle left"></i>&nbsp;&nbsp;&nbsp;Wine Journal</a>

          <span class="right">
          <% if Helpers.current_user(session) %>
            Hello, <%= Helpers.current_user(session).name %> |
            <a href="/bottles">Bottles</a> |
            <a href="/logout">Logout</a>
          <% else %>
            <a href="/login">Login</a> or <a href="/signup">Sign Up</a>
          <% end %>
          </span>
        </nav>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>Wine Journal</strong> | <a href="https://shannoncrabill.com/blog/sinatra-crud-application/">Process</a> | <a href="https://github.com/scrabill/wine-journal">Github</a></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
